
#include <iostream>
using namespace std;
int main() {
   int arr[]={7, 10, 4, 3, 20, 15} ;
   int k=3,temp;
   int n =sizeof(arr)/sizeof(arr[0]);
   //Sorting
   int i,j;
   for(i=0;i<n;i++)
   { for(j=i+1;j<n;j++)
   {if(arr[i]>arr[j])
   {temp=arr[i];
   arr[i]=arr[j];
   arr[j]=temp;}
   }
   }
   cout<<arr[k-1];

    return 0;
}
